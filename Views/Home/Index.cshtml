@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center ">
    <h5>
        <span
            style="background: linear-gradient(90deg, #093A12 0%, #00A859 80%); -webkit-background-clip: text; -webkit-text-fill-color: transparent; " class="fs-1">
            Veja os planos que temos
        </span>
    </h5>

</div>

<div class="d-flex align-items-center ">
    <div class="card" style="width: 18rem; height: 20rem; background: #005B3D; opacity: 0.98; margin-right: 50px;">
        <h3 class="card-title text-center "><strong>Básico</strong></h3>
        <strong class="card-text">Escolhendo o plano básico você tem essa variedade de recursos -</strong>
        <div class="col-md-3 form-group">
            <div class="form-check text-nowrap">
                <input class="form-check-input" type="checkbox" id="checkbox1" value="0">
                <label class="form-check-label" for="checkbox1">Exame clínico</label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="checkbox2" value="1">
                <label class="form-check-label" for="checkbox2">PCMSO</label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="checkbox3" value="2">
                <label class="form-check-label" for="checkbox3">PPP</label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="checkbox4" value="3">
                <label class="form-check-label" for="checkbox4">PGR</label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="checkbox5" value="4">
                <label class="form-check-label" for="checkbox5">Gestão</label>
            </div>
        </div>

        <div class="mt-auto text-center">
            <button class="submit center" onclick="window.location.href='/Home/Contact'">Saiba Mais</button>
        </div>
    </div>

    <div class="card" style="width: 18rem; height: 20rem; background: #005B3D; opacity: 0.98; margin-right: 50px;">
        <h3 class="card-title text-center "><strong>Plus</strong></h3>

        <strong class="card-text">Escolhendo o plano básico você tem essa variedade de recursos -</strong>
        <li class="text">Exame clínico</li>
        <li class="text">PCMSO</li>
        <li class="text">PPP</li>
        <li class="text">PGR</li>
        <li class="text">Gestão</li>
        <div class="mt-auto text-center">
            <button class="submit center" onclick="window.location.href='/Home/Contact'">Saiba Mais</button>
        </div>
    </div>

    <div class="card" style="width: 18rem; height: 20rem; background: #005B3D; opacity: 0.98; margin-right: 50px;">
        <h3 class="card-title text-center "><strong>Premium</strong></h3>

        <strong class="card-text">Escolhendo o plano básico você tem essa variedade de recursos -</strong>
        <li class="text">Exame clínico</li>
        <li class="text">PCMSO</li>
        <li class="text">PPP</li>
        <li class="text">PGR</li>
        <li class="text">Gestão</li>
        <div class="mt-auto text-center">
            <button class="submit center" onclick="window.location.href='/Home/Contact'">Saiba Mais</button>
        </div>
    </div>

    <div class="card" style="width: 18rem; height: 20rem; background: #005B3D; opacity: 0.98; margin-right: 50px;">
        <h3 class="card-title text-center "><strong>Personalizado</strong></h3>
        <div class="">
            <strong class="card-text">Escolhendo o plano básico você tem essa variedade de recursos:</strong>
            <ul>
                <li><input type="checkbox" class="checkbox"> Exame clínico</li>
                <li><input type="checkbox" class="checkbox"> PCMSO</li>
                <li><input type="checkbox" class="checkbox"> PPP</li>
                <li><input type="checkbox" class="checkbox"> PGR</li>
                <li><input type="checkbox" class="checkbox"> Gestão</li>
            </ul>
        </div>
        <div class="d-flex justify-content-center mt-auto ">
            <button class="submit center" onclick="window.location.href='/Home/Contact'">Saiba Mais</button>
        </div>
    </div>
</div>
